{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2023", "ES2023.Array"],
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "target": "ES2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "paths": {
      "@shrodinger/*": ["./libs/*"]
    }
  }
}
